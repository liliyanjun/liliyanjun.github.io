*{margin:0;padding:0;font-family: "微软雅黑";text-decoration: none;font-size: 12px;list-style:none;}
.header{width:100%;height:100%;}
.banner{width:100%;height:100%;position:relative;}
.nav{margin-left: auto;position: absolute;width: 100%;} 
.nav_background{width:100%;height:auto;position: absolute;}
.nav ul{width:35%;float:right;margin-right: 10%;height: 20px;}
.nav ul li{float:left;margin:2% 10% 0 0;}
.nav ul li a{color:white;display:block;padding:8px;text-align: center;}
.nav ul li a:nth-child(1){width:80px;}
.nav ul li a:nth-child(2){width:78px;}
.nav ul li a:nth-child(3){width:92px;}
.nav ul li a:nth-child(4){width:128px;}
.nav ul li a:active{color:white;display:block;border-bottom: 2px solid #fcff00;}
.main{width:100%;}
.main1{width:100%;height:auto;}
.main1_f{width:1200px;height:auto;margin:0 auto;}